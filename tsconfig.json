{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["src/**/*"]
}
